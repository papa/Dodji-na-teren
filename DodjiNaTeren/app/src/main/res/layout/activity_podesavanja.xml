<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.dodjinateren.PodesavanjaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="15dp"
        android:orientation="vertical">
      <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/slikakoris"
            android:src="@drawable/prijatelji"
            android:layout_gravity="center"
           android:background="@drawable/border"
            android:layout_marginTop="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promenite sliku!"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username: "
            android:textStyle="bold"
            android:textSize="20sp" />
        <EditText
            android:layout_width="match_parent"
            android:hint="Unesite novi username"
            android:id="@+id/editusername"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-MAIL: "
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textSize="20sp" />
        <EditText
            android:layout_width="match_parent"
            android:hint="Unesite novi e-mail"
            android:id="@+id/editmail"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sifra: "
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textSize="20sp" />
        <EditText
            android:layout_width="match_parent"
            android:hint="Unesite samo ako zelite novu sifru (6 ili vise karaktera)"
            android:id="@+id/editpass"

            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:id="@+id/update"
            android:layout_marginTop="25dp"
            android:src="@drawable/jeste"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
