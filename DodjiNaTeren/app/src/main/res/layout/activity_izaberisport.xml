<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.dodjinateren.IzaberiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ikonice"
            android:scaleType="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IZABERITE SPORT !"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Kliknite na sliku sporta koji zelite da igrate na terenu! "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/sport1"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/kosarka" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/sport2"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:src="@drawable/fudbal"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/sport3"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:src="@drawable/tenis" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/sport4"
                android:src="@drawable/plivanje" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
